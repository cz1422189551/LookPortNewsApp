<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/colorPrimary"
    android:descendantFocusability="blocksDescendants"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.coorchice.library.SuperTextView
            android:id="@+id/iv_detail_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:corner="50dp"
            app:isShowState="true"
            app:left_bottom_corner="true"
            app:left_top_corner="true"
            app:right_bottom_corner="true"
            app:right_top_corner="true"
            app:state_drawable="@mipmap/ic_launcher"
            app:drawableAsBackground="true"
            />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:focusable="true"
            android:id="@+id/tv_detail_comment_name"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/HeadBlue"
            android:text="狮子吃咸鱼"/>

            <ImageView
                android:focusable="false"
                android:id="@+id/iv_detail_bingo"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="64dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/bingo"/>

            <TextView
                android:id="@+id/tv_detail_bingo"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="48dp"
                android:textColor="@color/colorPrimaryText"
                android:text="赞"
                />

            <ImageView
                android:layout_marginRight="8dp"
                android:id="@+id/iv_detail_more"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/more"/>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="48dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_detail_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryText"
            android:lineSpacingExtra="4dp"
            android:text="怎么去拥有一道彩虹，怎么去用户一夏天的风，天上的星星笑地上的人。"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="2小时前"/>

        <TextView
            android:id="@+id/tv_detail_huifu"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:textSize="12sp"/>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_detail"
        android:orientation="horizontal"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WhiteGey">
        <RelativeLayout
            android:id="@+id/rl_detail"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.cz.lookportnews.ui.ListViewNesting
                android:id="@+id/lv_detail"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.cz.lookportnews.ui.ListViewNesting>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>

